% Code listing style named "bwstyle" for black and white printing
\lstdefinestyle{bwstyle}{
    backgroundcolor=\color[rgb]{1.0, 1.0, 1.0}, % White background
    commentstyle=\color[rgb]{0.5, 0.5, 0.5},   % Gray comments
    keywordstyle=\color[rgb]{0.0, 0.0, 0.0},   % Black keywords
    numberstyle=\tiny\color[rgb]{0.5, 0.5, 0.5}, % Gray numbers
    stringstyle=\color[rgb]{0.0, 0.0, 0.0},    % Black strings
    basicstyle=\ttfamily\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=4,
    frame=single, % Add frame around code
    framerule=0pt, % Remove frame rule color
    rulecolor=\color[rgb]{0.5, 0.5, 0.5}, % Light gray frame rule
}
